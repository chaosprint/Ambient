default interface audio {
use pkg.types.{entity-id, mat4, vec3}
    /// An action in an animation.
    record audio-listener {
        transform: mat4,
        ear-distance: vec3,
    }

    load: func(url: string)
    play: func(index: u32)
    set-listener: func(entity: entity-id, listener: audio-listener)
}